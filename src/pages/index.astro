---
import SocialList from "@/components/SocialList.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import { getAllPosts, sortMDByDate } from "@/data/post";
import PageLayout from "@/layouts/Base.astro";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);

const meta = {
	description: "I'm a starter theme for Astro.build",
	title: "Links",
};


const cactusTech: { desc: string; href: string; title: string }[] = [
	{
		desc: "Go Deep into the Deception.",
		href: "https://goesdeep.win/#trash",
		title: "GoesDeep",
	},
  {
		desc: "Go Deep into the Deception.",
		href: "https://deepwater.cc",
		title: "Deep Water",
	},
	{
		desc: "Health tips that may be helpful.",
		href: "https://dmso.cc",
		title: "DMSO",
	},
	{
		desc: "twitter.com.",
		href: "https://x.com/ShadowofEzra",
		title: "Shadow of Ezra",
	},
	{
		desc: "twitter.com.",
		href: "https://x.com/Kabamur_Taygeta",
		title: "Kabamur_Taygeta",
	},
  {
		desc: "twitter.com.",
		href: "https://x.com/GhostEzraQ",
		title: "GhostEzra",
	},
	{
		desc: "Q @QTHESTORMM.",
		href: "https://x.com/QTHESTORMM",
		title: "@QTHESTORMM.",
	},

	{
